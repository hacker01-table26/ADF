{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "adfchallenge2"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/CopySouthridge')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy_365",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "movies"
							},
							{
								"name": "Destination",
								"value": "challenge1/southridge/movies"
							}
						],
						"typeProperties": {
							"source": {
								"type": "DocumentDbCollectionSource",
								"nestingSeparator": "."
							},
							"sink": {
								"type": "JsonSink",
								"storeSettings": {
									"type": "AzureBlobFSWriteSettings"
								},
								"formatSettings": {
									"type": "JsonWriteSettings",
									"quoteAllText": true,
									"filePattern": "arrayOfObjects"
								}
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "SourceDataset_365",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "DestinationDataset_365",
								"type": "DatasetReference",
								"parameters": {
									"southridge_dest_adls_fsname": {
										"value": "@pipeline().parameters.southridge_dest_adls_fsname",
										"type": "Expression"
									},
									"southridge_dest_adls_folder": {
										"value": "@pipeline().parameters.southridge_dest_adls_folder",
										"type": "Expression"
									},
									"southridge_dest_adls_filename": {
										"value": "@pipeline().parameters.southridge_dest_adls_filename",
										"type": "Expression"
									}
								}
							}
						]
					}
				],
				"parameters": {
					"southridge_dest_adls_fsname": {
						"type": "string",
						"defaultValue": "challenge1"
					},
					"southridge_dest_adls_folder": {
						"type": "string",
						"defaultValue": "southridge"
					},
					"southridge_dest_adls_filename": {
						"type": "string",
						"defaultValue": "movies.json"
					}
				},
				"annotations": []
			},
			"dependsOn": []
		}
	]
}